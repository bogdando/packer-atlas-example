{
  "variables": {
    "base": "{{env `base`}}",
    "headless": "{{env `headless`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "install_vagrant_key": "true"
  },
  "builders": [{
    "type": "docker",
    "image": "ubuntu:{{user `base`}}",
    "commit": true,
    "run_command": [
      "-ti",
      "--privileged",
      "-v",
      "/sys/fs/cgroup:/sys/fs/cgroup",
      "-v",
      "/var/run/docker.sock:/var/run/docker.sock",
      "-v",
      "lib_apt_{{user `base`}}:/var/lib/apt/",
      "-v",
      "cache_{{user `base`}}:/var/cache/",
      "-d",
      "{{.Image}}",
      "/bin/bash"
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | sh '{{.Path}}'",
    "scripts": [
      "script/sudo.sh"
    ]}, {
    "type": "shell",
    "environment_vars": [
      "BASE={{user `base`}}",
      "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
      "SSH_USERNAME={{user `ssh_username`}}",
      "SSH_PASSWORD={{user `ssh_password`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/tools.sh",
      "script/mysql_min.sh",
      "script/vagrant.sh",
      "script/sshd.sh",
      "script/docker.sh",
      "script/ha_stack.sh",
      "script/crmsh.sh",
      "script/cleanup.sh"
    ]
  }],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "bogdando/mysql-cluster-ocf-{{user `base`}}",
        "tag": "latest",
        "keep_input_artifact": false
      },
      "docker-push"
    ]
  ]
}
